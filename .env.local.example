# Clerk Authentication (Production keys from prototype)
# IMPORTANT: Get your actual production keys from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/trade/new
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/trade/new

# Clerk Frontend API (without https://)
NEXT_PUBLIC_CLERK_FRONTEND_API=

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Xero OAuth (Required for buyer lookup and invoice creation)
# Get these from: https://developer.xero.com/app/manage
NEXT_PUBLIC_XERO_CLIENT_ID=
XERO_CLIENT_SECRET=

